#include <conio.h>
#include <iostream>
using namespace std;

#define KEY_UP 72
#define KEY_DOWN 80
#define KEY_LEFT 75
#define KEY_RIGHT 77

int main()
{
    int c = 0;
    while(1)
    {
        c = 0;
        c=getch();
        switch(c) {
        case KEY_UP:
            cout << endl << "Up" << endl;//key up
            break;
        case KEY_DOWN:
            cout << endl << "Down" << endl;   // key down
            break;
        case KEY_LEFT:
            cout << endl << "left" << endl;  // key right
            break;
        case KEY_RIGHT:
            cout << endl << "right" << endl;  // key left
            break;
        default:
            cout << endl << "null" << endl;  // key left
            break;
        }

    }

    return 0;
}
